@model List<WareHouse_MarioOrlando.Models.Domain.Category>

<div class="category">
    <div class="category-wrapper">
        <h1>Product Categories</h1>
        <button class="add-button">
            <a  asp-area="" asp-controller="Category" asp-action="Add">Add Category</a>
        </button>
        <div class="table-container">
            <table class="category-table">
                <thead>
                    <tr>
                        <th class="centered">No</th>
                        <th class="centered">Category</th>
                        <th >Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        var category = Model[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@category.Name</td>
                            <td class="button-cell">
                                <div class="button-group">
                                    <button class="edit-button">
                                        <a  href="Category/View/@category.Id">Edit</a>
                                    </button>
                                    <form method="POST" action="Category/Delete">
                                        <input type="hidden" name="Id" value="@category.Id" />
                                        <button type="submit" class="delete-button">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .category{
        padding: 1rem 3rem 1rem 3rem;
    }  
    
    .add-button {
        margin-bottom: 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
    }

    .add-button a{
        color: white;
        text-decoration: none;
    }

    .category-table {
        width: 100%;
        border-collapse: collapse;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .edit-button, .delete-button {
        background-color: #28a745;
        color: #fff;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
        margin-right: 5px;
    }

    td {
        text-align: center;
    }

    .table-container {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
        padding: 20px;
    }
    .edit-button {
        background-color: darkorange;
        color: #333;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
        border-radius: 5px;
    }

    .edit-button a{
        text-decoration: none;
        color: white;
    }

    .delete-button {
        background-color: red;
        color: #fff;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
        border-radius: 5px;
    }

    .button-group {
        display: flex;
    }

    .button-group button {
        margin-right: 5px;
    }

    .centered {
        text-align: center;
    }

    .button-cell {
        text-align: center;
    }
</style>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        var deleteButtons = document.querySelectorAll(".delete-button");
        deleteButtons.forEach(function (button) {
            button.addEventListener("click", function () {
                var categoryId = button.parentElement.querySelector("input[name='Id']").value;
                if (confirm("This action is irreversible! Are you sure you want to delete this category?")) {
                    fetch("Category/Delete/" + categoryId, {
                        method: "DELETE"
                    })
                        .then(function (response) {
                            if (response.status === 200) {
                                button.closest("tr").remove();
                            }
                        })
                        .catch(function (error) {
                            console.error("Error deleting the category: " + error);
                        });
                }
            });
        });
    });
</script>